<% if reservation.status == "Pending" && other == "Locataire"%>
  <%= simple_form_for(reservation, html: {style: "background-color: transparent; box-shadow: none; padding: 20px 0px;"}) do |f| %>
    <div class="d-flex justify-space-between gap-4" style="width: 100px;">
      <%= f.submit  name: "status", value: "Accepter", class: "our-btn our-btn-success ms-0 border-0" %>
      <%= f.submit  name: "status", value: "Refuser", class: "our-btn our-btn-danger border-0" %>
    </div>
  <% end %>
<% end %>
