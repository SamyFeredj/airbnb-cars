<div class="reservation-container">
  <% car = reservation.car %>
  <div class="reservation-title">
    <h4><%= car.brand %> - <%= car.car_model %></h4>
  </div>
  <div class="reservation-location">
    <p><strong><i class="fa-solid fa-location-dot"></i> </strong> <%= car.car_location %></p>
  </div>
  <div class="reservation-info">
    <div class="reservation-dates-text">
      <p><span class="reservation-date-text">Date de d√©but</span></p>
      <p><span class="reservation-date-text">Date de fin</span></p>
    </div>
    <div class="reservation-dates">
      <p> <%= reservation.start_date.strftime('%d %b, %Y')%></p>
      <p> <%= reservation.end_date.strftime('%d %b, %Y') %></p>
    </div>
    <div class="reservation-price">
      <p><strong><i class="fa-solid fa-euro-sign"></i> </strong> <%= number_to_currency(reservation.total_price, unit: "") %></p>
    </div>
  </div>
</div>
