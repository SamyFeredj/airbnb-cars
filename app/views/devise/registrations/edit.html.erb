<div class="container-user mt-5" id="edit-user">

  <div class="user-information">
    <h2>Mes informations</h2>
    <%= simple_form_for(resource, as: resource_name, url: registration_path(resource_name), html: { method: :put }, class: "mb-5") do |f| %>
      <%= f.error_notification %>

      <div class="form-inputs">
        <%= f.input :email, required: true, autofocus: true %>

        <div class="row g-3">
          <div class="col">
            <%= f.input :first_name, required: true %>
          </div>
          <div class="col">
            <%= f.input :last_name, required: true %>
          </div>
        </div>

        <%= f.input :phone_number, required: true %>

        <% if devise_mapping.confirmable? && resource.pending_reconfirmation? %>
          <p>En attente de confirmation à : <%= resource.unconfirmed_email %></p>
        <% end %>

        <%= f.input :password,
                    hint: "Veuillez laisser le champ vide si vous ne voulez pas le changer",
                    required: false,
                    input_html: { autocomplete: "new-password" } %>
        <%= f.input :password_confirmation,
                    required: false,
                    input_html: { autocomplete: "new-password" } %>
        <%= f.input :current_password,
                    hint: "Nous avons besoin de votre mot de passe actuel pour confirmer les changements",
                    required: true,
                    input_html: { autocomplete: "current-password" } %>
      </div>

      <div class="form-actions">
        <%= f.button :submit, "Mettre à jour", class: "our-btn our-btn-success" %>
      </div>
    <% end %>
  </div>

  <div class="user-other">

    <%= link_to "Déconnexion", destroy_user_session_path, method: :delete, data: { turbo_method: :delete }, class: "our-btn our-btn-default" %>

    <div>
      Vous n'êtes pas satisfait ?
      <%= button_to "Supprimer mon compte", registration_path(resource_name), data: { confirm: "Êtes-vous sûr?", turbo_confirm: "Êtes-vous sûr?" }, method: :delete, class: "our-btn our-btn-danger" %>
    </div>
  </div>

</div>
